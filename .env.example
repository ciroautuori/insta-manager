# =============================================================================
# Instagram Multi-Account Management Platform - Environment Configuration
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/instagram_manager
POSTGRES_DB=instagram_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# META/INSTAGRAM API CONFIGURATION
# =============================================================================
# Get these from https://developers.facebook.com/
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:8080/auth/instagram/callback

# Instagram API settings
INSTAGRAM_API_VERSION=v18.0
INSTAGRAM_RATE_LIMIT_PER_HOUR=200

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_secure_password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Instagram Manager
PROJECT_VERSION=1.0.0

# =============================================================================
# CORS AND SECURITY
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# MEDIA STORAGE
# =============================================================================
MEDIA_ROOT=/app/media
PUBLIC_MEDIA_BASE_URL=http://localhost:8080/media

# File upload limits
MAX_UPLOAD_SIZE=50MB
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/quicktime

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING AND ANALYTICS (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_SSL=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Base URL for API calls from frontend
VITE_API_BASE_URL=http://localhost:8000
FRONTEND_API_BASE_URL=http://localhost:8080

