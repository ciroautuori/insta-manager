# Database
DATABASE_URL=postgresql://instadmin:instadmin_password@postgres:5432/instadmin
TEST_DATABASE_URL=postgresql://instadmin:instadmin_password@postgres:5432/instadmin_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Meta Graph API
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_REDIRECT_URI=http://localhost:8000/api/v1/instagram/auth/callback

# JWT Authentication
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_password_here

# Storage
MEDIA_STORAGE_PATH=/app/media
MAX_FILE_SIZE=52428800
PUBLIC_MEDIA_BASE_URL=http://localhost:8000/media

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Environment
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]
